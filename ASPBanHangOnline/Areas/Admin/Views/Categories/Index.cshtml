@model IEnumerable<ASPBanHangOnline.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách loại sản phẩm</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<div style="text-align:center">
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                Tên danh mục
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Category Order
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 0;
        }
@foreach (var item in Model) {
        i++;
        <tr>
                <td>@i</td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.CategoryPhoto)" width="100" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryOrder)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a class="btn btn-danger" onclick="return confirm('Bạn có muốn xóa bản ghi này?')" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
