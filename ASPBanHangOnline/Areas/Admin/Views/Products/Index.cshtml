@model IEnumerable<ASPBanHangOnline.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách sản phẩm</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<div style="text-align:center">
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                Tên sản phẩm
            </th>
           <th>
                Hình ảnh
            </th>
            <th>
                Tên loại
            </th>
            <th>
                Giá gốc
            </th>
            <th>
                Giảm giá
            </th>
            
            <th>
                Kích cỡ
            </th>
            <th>
                Màu sắc
            </th>
            <th>
                Xu hướng
            </th>
            <th>
                Nổi bật
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 0;
        }
@foreach (var item in Model) {
        i++;
        <tr>
             <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ProductPhoto)" width="90" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDiscount)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Size.SizeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.ColorName)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.IsTrandy)*@
                @{
                    if (item.IsTrandy)
                    {
                        <a class="btn btn-primary" asp-action="UpdateTrandy" asp-route-id="@item.ProductId">Display</a>
                    }
                    else
                    {
                        <a class="btn btn-danger" asp-action="UpdateTrandy" asp-route-id="@item.ProductId">Hide</a>
                    }
                }
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.IsArrived)*@
                @{
                    if (item.IsArrived)
                    {
                        <a class="btn btn-primary" asp-action="UpdateArrived" asp-route-id="@item.ProductId">Display</a>
                    }
                    else
                    {
                        <a class="btn btn-danger" asp-action="UpdateArrived" asp-route-id="@item.ProductId">Hide</a>
                    }
                }
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a class="btn btn-danger" onclick="return confirm('Bạn có muốn xóa bản ghi này?')" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>