@model ASPBanHangOnline.Models.User

<style>
media (min-width: 1025px) {
.h-custom {
height: 100vh !important;
}
}
</style>
<section class="h-100 h-custom" style="background-color: #8fc4b7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

            <form asp-action="Update" class="px-md-2">
                <input name="UserId" value="@Model.UserId" type="hidden"/>
              <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="form-outline mb-4">
                        <input name="FirstName" value="@Model.FirstName" type="text" id="form3Example1q" class="form-control" />
                        <label class="form-label" for="form3Example1q">First Name</label>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="form-outline mb-4">
                        <input name="LastName" value="@Model.LastName" type="text" id="form3Example1q" class="form-control" />
                        <label class="form-label" for="form3Example1q">Last Name</label>
                    </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline datepicker">
                    <input type="date" value="@Model.Birthday" class="form-control" id="exampleDatepicker1" />
                    <label for="exampleDatepicker1" class="form-label">Birthday</label>
                  </div>

                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline mb-4">
                  <select name="Sex" class="select">
                    <option value="0" disabled>Gender</option>
                    @if(Model.Sex == 1){
                        <option value="1" selected>Female</option>
                    }else{
                        <option value="1" >Female</option>
                    }

                    @if(Model.Sex == 2){
                        <option value="2" selected>Male</option>
                    }else{
                        <option value="2" >Male</option>
                    }

                    @if(Model.Sex == 3){
                        <option value="3" selected>Other</option>
                    }else{
                        <option value="3" >Other</option>
                    }
                  </select>
                  </div>
                </div>
              </div>

              <div class="form-outline mb-4">
                <input readonly name="UserEmail" value="@Model.UserEmail" type="text" id="form3Example1q" class="form-control" />
                <label class="form-label" for="form3Example1q">Email</label>
              </div>
              <div class="form-outline mb-4">
                <input readonly name="Passwords" value="@Model.Passwords" type="password" id="form3Example1q" class="form-control" />
                <label class="form-label" for="form3Example1q">Password</label>
              </div>

              <div class="form-outline mb-4">
                <input name="Phone" value="@Model.Phone" type="text" id="form3Example1q" class="form-control" />
                <label class="form-label" for="form3Example1q">Phone Number</label>
              </div>

              <button type="submit" class="btn btn-success btn-lg mb-1">Save</button>

            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
